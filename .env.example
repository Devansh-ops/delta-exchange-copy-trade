# ---- Exchange endpoints
DELTA_WS_URL=wss://socket.india.delta.exchange
DELTA_API_BASE=https://api.india.delta.exchange

# ---- Secrets (never commit)
DELTA_API_KEY=
DELTA_API_SECRET=

# ---- Behavior
USER_MULTIPLIER=2.0
DRY_RUN=true
ALLOW_SYMBOLS=ALL
ORDER_TYPE=market_order
TIME_IN_FORCE=IOC
LIMIT_SLIPPAGE_BPS=0
LIMIT_IOC_FALLBACK_MARKET=true
SELF_TAG_PREFIX=BOTMULT_

# ---- Risk controls
MAX_TOPUP_PER_TRADE=1000000
MAX_TOPUP_PER_SYMBOL=10000000

# ---- Reliability / logs
PING_INTERVAL=30
PING_TIMEOUT=5
LOG_DIR=logs
VERBOSE_DECISIONS=true
USER_AGENT=python-rest-client

# ---- HTTP
HTTP_TIMEOUT=10
HTTP_CONN_TIMEOUT=3.05
HTTP_RETRIES=3

# ---- TLS
WS_INSECURE=false